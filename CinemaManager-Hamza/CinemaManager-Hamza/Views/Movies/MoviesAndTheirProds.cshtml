@model IEnumerable<CinemaManager_Hamza.Models.Cinema.Movie>

@{
    ViewData["Title"] = "Movies and Their Producers";
}

<h2>Movies and Their Producers</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Producer Name</th>
            <th>Producer Nationality</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Genre</td>
                <td>@movie.Producer?.Name</td>
                <td>@movie.Producer?.Nationality</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Back to Movies List</a>
